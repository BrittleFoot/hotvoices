{
  "manifest_version": 2,

  "name": "VK Voice Message Hot Keys",
  "description": "This extension adds 'Touch to speech' hot key in vk.com  messaging",
  "version": "1.0.1",

  "content_scripts": [
    {
      "matches": ["https://vk.com/im?*"],
      "js": ["keys.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "help.html"
  },
  "permissions": [
    "https://vk.com/im?*"
  ]
}